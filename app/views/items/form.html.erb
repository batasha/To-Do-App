<%= form_for(@item) do |f| %>
	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :details %><br>
		<%= f.text_area :details %>
	</div>

	<div class="field">
		<%= f.label :project %><br>
		<%= f.collection_select :project_id, Project.all, :id, :title%><br>
	</div>

	<div class="field">
		<%= f.label :completed %><br>
		<%= f.check_box(:completed, {}, 1, nil) %>
	</div>


	<%= f.submit %>
<% end %>