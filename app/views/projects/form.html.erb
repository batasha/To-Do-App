<% if @project.persisted? %>
  <form action="<%= project_url(@project) %>" method="post">

	<input type="hidden" name="_method" value="put">

<% else %>
  <form action="<%= projects_url %>" method="post">
<% end %>

	  <label for="project_title">Title</label>
	  <input type="text" name="project[title]" id="project_title" value="<%= @project.title %>"><br>

	  <label for="project_description">Description</label>
	  <textarea name="project[description]" id="project_description" value="<%= @project.description %>"></textarea><br>

	  <label for "project_team">Team</label>
	  <select name="project[team_id]">
	  	<% Team.all.each do |team| %>
	  	  <option name="project[team_id]" value="<%= team.id %>" selected="<%= "selected" if @project.team_id == team.id %>"><%= team.name %></option>
	  	<% end %>
	  </select><br>

	  <input type="submit" name="commit" value="Save">

	</form>